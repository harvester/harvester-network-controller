{
	"linters": {
		"disable-all": true,
		"enable": [
			"goimports",
			"gofmt",
			"misspell",
			"revive",
			"prealloc"
		]
	},
	"run": {
		"skip-files": [
			"/zz_generated_"
		],
		"skip-dirs": [
			"generated"
		],
		"deadline": "5m",
		"tests": true,
		"build-tags": [
			"test"
		]
	},
	"linters-settings": {
		"goimports": {
			"local-prefixes": "github.com/harvester/harvester-network-controller"
		}
	}
}
