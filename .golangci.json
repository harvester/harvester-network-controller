{
	"linters": {
		"disable-all": true,
		"enable": [
			"goimports",
			"gofmt",
			"misspell",
			"revive",
			"prealloc",
			"gosec"
		]
	},
	"issues": {
		"exclude-files": [
			"/zz_generated_"
		],
		"exclude-dirs": [
			"generated"
		]
	},
	"run": {
		"timeout": "5m",
		"tests": true,
		"build-tags": [
			"test"
		]
	},
	"linters-settings": {
		"goimports": {
			"local-prefixes": "github.com/harvester/harvester-network-controller"
		}
	}
}
